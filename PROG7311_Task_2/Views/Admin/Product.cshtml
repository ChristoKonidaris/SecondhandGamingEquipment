@model IEnumerable<PROG7311_Task_2.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="container-fluid">
        <h2>Products</h2>
        <br />
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
               My Store
            </li>
            <li class="breadcrumb-item active">Products</li>
        </ol>
        <div class="card mb-3">

            <div class="card-header">
                <i class="fas fa-table"></i>
                Product Details
                <a href="../Admin/ProductAdd" class="btn btn-primary pull-right">+Add New</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Product No.</th>
                                <th>Category No.</th>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Action</th>


                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Product No.</th>
                                <th>Category No.</th>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Action</th>

                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                              
                                <tr>
                                    <td>@item.ProductId</td>
                                    <td>@item.CategoryId</td>
                                    <td>@item.ProductName</td>
                                    <td>R @item.Price</td>
                                    <td>@item.Quantity</td>
                                    <td>

                                        @Html.ActionLink("Edit", "ProductEdit", new { productId = item.ProductId })
                                    </td>

                                </tr>
                                
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>