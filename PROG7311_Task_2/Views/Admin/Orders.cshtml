@model List<PROG7311_Task_2.DAL.Tbl_Orders>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <h2>Orders</h2>
    <br />

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            My Store
        </li>
        <li class="breadcrumb-item active">Orders</li>
    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Order Details

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Order No.</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Total Price</th>
                           

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Order No.</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Total Price</th>
                       
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>@item.OrderId</td>
                            <td>@item.Product</td>
                            <td>@item.Quantity</td>
                            <td>@item.TotalPrice</td>
    
                        </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
